{
    "name": "lequipefr/mockserver-behat-context",
    "description": "Behat context for MockServer.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0.2",
        "behat/behat": "^3.0",
        "behat/gherkin": "^4.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "php-http/discovery": "^1.17",
        "psr/http-client-implementation": "*",
        "psr/http-factory-implementation": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpspec/prophecy-phpunit": "^2.0",
        "php-http/guzzle7-adapter": "^1.0",
        "guzzlehttp/psr7": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Lequipe\\MockServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lequipe\\Test\\MockServer\\": ["tests/", "tests/bootstrap/"]
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
